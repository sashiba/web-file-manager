<%= image_tag @file.file.url if @file.picture? %>
<%= @file.file.file.filename %>

<div>
  <%= link_to "View", @file.file.url, class: 'btn btn-primary' %>

  <%= link_to "Back", user_path(@file.user_id), class: 'btn btn-primary' %>

  <%= link_to "Delete file", user_file_path(@file.user_id, @file),
                             method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-primary' %>
</div>
